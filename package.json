{
  "name": "@felipecrs/dev-ubuntu",
  "description": "A Vagrant box with desktop, tools, and adjustments for developers",
  "version": "6.1.19",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/felipecrs/dev-ubuntu.git"
  },
  "scripts": {
    "lint": "scripts/lint.sh && prettier .",
    "lint:fix": "prettier --write .",
    "release": "semantic-release",
    "build": "vagrant up",
    "package": "scripts/package.sh",
    "publish": "scripts/publish.sh"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@prettier/plugin-ruby": "^1.5.2",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/exec": "^5.0.0",
    "@semantic-release/git": "^9.0.0",
    "commitizen": "^4.0.3",
    "conventional-changelog-conventionalcommits": "^4.5.0",
    "cz-conventional-changelog": "^3.1.0",
    "husky": "^4.2.3",
    "prettier": "^2.0.2",
    "prettier-plugin-sh": "^0.6.0",
    "semantic-release": "^17.0.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release": {
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "releaseRules": [
            {
              "type": "refactor",
              "release": "patch"
            },
            {
              "type": "perf",
              "release": "patch"
            },
            {
              "type": "build",
              "scope": "deps",
              "release": "patch"
            }
          ]
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "presetConfig": {
            "types": [
              {
                "type": "feat",
                "section": "Features"
              },
              {
                "type": "fix",
                "section": "Bug Fixes"
              },
              {
                "type": "perf",
                "section": "Performance Improvements"
              },
              {
                "type": "revert",
                "section": "Reverts"
              },
              {
                "type": "refactor",
                "section": "Code Refactoring"
              },
              {
                "type": "build",
                "scope": "deps",
                "section": "Dependencies"
              }
            ]
          }
        }
      ],
      "@semantic-release/changelog",
      [
        "@semantic-release/exec",
        {
          "verifyConditionsCmd": "vagrant cloud auth login",
          "prepareCmd": "scripts/package.sh && npm version '${nextRelease.version}' --no-git-tag-version",
          "publishCmd": "CHANNEL='${nextRelease.channel}' RELEASE_NOTES='${nextRelease.notes}' scripts/publish.sh"
        }
      ],
      "@semantic-release/git",
      [
        "@semantic-release/github",
        {
          "addReleases": "bottom"
        }
      ]
    ],
    "preset": "conventionalcommits"
  }
}
